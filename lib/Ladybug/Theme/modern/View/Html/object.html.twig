{% import "_macros.html.twig" as m %}


{% set id = random(1000) %}

<div class="accordion-group">
    <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#subb" href="#c{{ id }}">
            {{ m.array_key(array_key) }}

            <span class="">{% block type %}Object ({{ var.className }}){% endblock %}</span>

        </a>
    </div>
    <div id="c{{ id }}" class="accordion-body collapse {% if var.level == 1%}in{% endif %}">
        <div class="accordion-inner">
            {% if var.objectCustomData is not empty %}

                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#subb" href="#object_data_{{ id }}">
                            Data
                        </a>
                    </div>
                    <div id="object_data_{{ id }}" class="accordion-body collapse">
                        <div class="accordion-inner">

                            {% if var.isCustomData %}
                                {{ var.objectCustomData.render()|raw}}
                            {% else %}
                                {% for key,data in var.objectCustomData %}
                                    {{ data.render(key)|raw }}
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>

                </div>

            {% endif %}





            {% if var.classFile is not empty %}
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#c{{ id }}" href="#object_info_{{ id }}">
                        Class info
                    </a>
                </div>
                <div id="object_info_{{ id }}" class="accordion-body collapse">
                    <div class="accordion-inner">
                        {% if var.classFile is not empty %}
                        <div class="final">Filename: {{ var.classFile }}</div>
                        {% endif %}
                        {% if var.classInterface is not empty %}
                        <div class="final">Interfaces: {{ var.classInterface }}</div>
                        {% endif %}
                        {% if var.classNamespace is not empty %}
                        <div class="final">Namespace: {{ var.classNamespace }}</div>
                        {% endif %}
                        {% if var.classParent is not empty %}
                        <div class="final">Parent: {{ var.classParent }}</div>
                        {% endif %}
                    </div>
                </div>

            </div>

            {% endif %}

            {% if var.classConstants is not empty %}
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#c{{ id }}" href="#object_constants_{{ id }}">
                        Class constants
                    </a>
                </div>
                <div id="object_constants_{{ id }}" class="accordion-body collapse">
                    <div class="accordion-inner">
                        {% for key,constant in var.classConstants %}
                            {{ constant.render(key)|raw }}
                        {% endfor %}
                    </div>
                </div>

            </div>
            {% endif %}

            {% if var.classMethods is not empty %}
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#c{{ id }}" href="#object_methods_{{ id }}">
                        Methods
                    </a>
                </div>
                <div id="object_methods_{{ id }}" class="accordion-body collapse">
                    <div class="accordion-inner">
                        {% for method in var.classMethods %}
                            {{ method }}<br/>
                        {% endfor %}
                    </div>
                </div>

            </div>
            {% endif %}



        </div>
    </div>

</div>





