{% extends "_base.html.twig" %}

{% block type %}{% endblock %}

{% block value %}
    <textarea id="code" style="font-weight: normal">{{ var.data }}</textarea>

    <script>
        var editor = CodeMirror.fromTextArea(document.getElementById("code"), {
            mode: {name: "{{ var.language }}", alignCDATA: true},
            lineNumbers: true,
            height: '40'
        });
        editor.setSize(null, 160);
    </script>
{% endblock %}
