{% extends "_base.console.twig" %}

{% import "_macros_table.console.twig" as mt %}

{% block type %}{{ m.indent(var.level) }}{{ var.title }}{% endblock type %}

{% block value %}
<intro>
    {{ mt.render_row_separator(var) }}
    <intro>
        {{ mt.render_header(var) }}

        <intro>

            {{ mt.render_row_separator(var) }}
            <intro>

                {% for row in var.rows %}
                {{ mt.render_row(row, var) }}
                <intro>
                    {% endfor %}

                    {{ mt.render_row_separator(var) }}

                    {% endblock %}

