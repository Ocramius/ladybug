{% extends "_base.text.twig" %}

{% block type %}array({{ var.length }}){% endblock type %}

{% block value %}
    <intro>
    {% if not var.terminal %}
        {% for item in var.value %}
            {{ m.indent(item.value.level) }}
            {{ render_type(item.value, item.key) }}
            {% if not item.value.composed %}<intro>{% endif %}
        {% endfor %}
    {% else %}
        {{ m.indent(var.level) }}(!)<space>Array<space>max<space>nesting<space>level<space>reached<intro>
    {% endif %}
{% endblock %}